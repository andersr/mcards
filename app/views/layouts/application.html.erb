    <script async defer>
      window.mySwipe = $('#card_collection').Swipe({
        speed: 400,
        continuous: false,
        callback: function(pos) {
          var i = bullets.length;
          while (i--) {
            bullets[i].className = ' ';
          }    
          bullets[pos].className = 'on';
        }
      }).data('Swipe');

